{
    "name": "advandz/notation",
    "description": "Unified PHP wrappers for multiple data serialization formats including CSV, JSON, TOON, YAML, NEON, TOML, and PHP serialization",
    "type": "library",
    "keywords": [
        "toon",
        "yaml",
        "neon",
        "object-notation",
        "token-optimization",
        "json-alternative"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Advandz Technologies, LLC"
        }
    ],
    "require": {
        "php": "^8.1",
        "helgesverre/toon": "^v3.0.0",
        "nette/neon": "^v3.4.0",
        "nette/utils": "^v4.0.0",
        "symfony/yaml": "^6.4.0",
        "yosymfony/toml": "^1.0.0",
        "league/csv": "^9.8.0"
    },
    "require-dev": {
        "nette/tester": "^2.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Advandz\\Notation\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Advandz\\Notation\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "tester tests -C",
        "test-coverage": "tester tests -C --coverage coverage.html --coverage-src src",
        "phpstan": "phpstan analyse src --level=max",
        "cs-check": "phpcs --standard=PSR12 src",
        "cs-fix": "phpcbf --standard=PSR12 src"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
